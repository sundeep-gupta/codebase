<?xml version="1.0" encoding="UTF-8"?>
<Runner>
	<Actions>
	    <Action>
			 <Name>TestForAgentInstallation</Name>
			 <Class>com.ironmountain.digital.qa.automation.TestRunner.CheckAgentInstallationAction</Class>
			 <Destination>BackupTestDir</Destination>
			 <ExecutionMethod>sequential</ExecutionMethod>
			 <ExecutionCount>1</ExecutionCount>
			 <ExecutionInterval>0</ExecutionInterval>
			 <FileType>Text</FileType>
		</Action>
		<Action>
			<Name>CreateTemporaryBackupFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.FolderCreateAction</Class>
			<Destination>BackupTestDir</Destination>
			<ExcecutionMethod>sequential</ExcecutionMethod>
			<ExcecutionCount>1</ExcecutionCount>
			<ExcecutionInterval>0</ExcecutionInterval>
			<FileType>Text</FileType>
		</Action>
		<Action>
			<Name>CopyDataToTestFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.FolderCopyAction</Class>
			<Source>SourceDataDir</Source>
			<Destination>BackupTestDir</Destination>
			<ExcecutionMethod>sequential</ExcecutionMethod>
			<ExcecutionCount>1</ExcecutionCount>
			<ExcecutionInterval>0</ExcecutionInterval>
		</Action>
		<Action>
			<Name>RunCancelBackup</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.RunCancelBackupAction</Class>
			<WaitForComplete>no</WaitForComplete>
			<Destination>BackupTestDir</Destination>
			<ExcecutionMethod>sequential</ExcecutionMethod>
			<ExcecutionCount>1</ExcecutionCount>
			<ExcecutionInterval>0</ExcecutionInterval>
		</Action>		
		<Action>
			<Name>DeleteTestFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.FolderDeleteAction</Class>
			<Destination>BackupTestDir</Destination>
			<ExcecutionMethod>sequential</ExcecutionMethod>
			<ExcecutionCount>1</ExcecutionCount>
			<ExcecutionInterval>0</ExcecutionInterval>
		</Action>
	</Actions> 
	<ActionObjects> 
		<ActionObject>
		    <Name>BackupTestDir</Name>
			<Class>SimpleFileObject</Class>
			<Path>d:/Auto-Backup-Dir</Path> 
		</ActionObject>
		<ActionObject>
			<Name>SourceDataDir</Name>
			<Class>SimpleFileObject</Class>
			<Path>d:/test-data-dir</Path> 
		</ActionObject>
		<ActionObject> 
			<Name>GenericDummyDestination</Name>
			<Class>SimpleFileObject</Class> 
			<Path>d:/</Path>
		</ActionObject> 			
	</ActionObjects> 
</Runner>