<?xml version="1.0" encoding="UTF-8"?>
<Runner>
	<Actions>
		<Action>
			<Name>DeleteTestFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.actions.FolderActions.FolderDeleteAction</Class>
			<Destination>BackupTestDir</Destination>
		</Action>		
	    <Action>
			<Name>CreateTemporaryBackupFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.actions.FolderActions.FolderCreateAction</Class>
			<WaitForComplete>yes</WaitForComplete>
			<Destination>BackupTestDir</Destination>
		</Action>
		<Action>
			<Name>CreateLocalTestDataFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.actions.FolderActions.FolderCreateAction</Class>
			<WaitForComplete>yes</WaitForComplete>
			<Destination>LocalTestDataFolder</Destination>
		</Action>
		<Action>
			<Name>CopyTestDataToLocalFolder</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.actions.FolderActions.FolderCopyAction</Class>
			<WaitForComplete>yes</WaitForComplete>
			<Source>SourceData</Source>
			<Destination>LocalTestDataFolder</Destination>
		</Action>		
		<Action>
			<Name>CopyMyRoamRegressionData</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.actions.FolderActions.FolderCopyAction</Class>
			<WaitForComplete>yes</WaitForComplete>
			<Source>MyRoamRegressionData</Source>
			<Destination>BackupTestDir</Destination>
		</Action>
		<Action>
			<Name>RunBackupNow</Name>
			<Class>com.ironmountain.digital.qa.automation.TestRunner.actions.RunBackupAction</Class>
			<WaitForComplete>yes</WaitForComplete>
			<Destination>BackupTestDir</Destination>
		</Action>
	</Actions> 
	<ActionObjects> 
		<ActionObject>
		    <Name>BackupTestDir</Name>
			<Class>SimpleFileObject</Class>
			<Path><![CDATA[C:\MyRoamRegressionData]]></Path> 
		</ActionObject>
		<ActionObject>
			<Name>LocalTestDataFolder</Name>
			<Class>SimpleFileObject</Class>
			<Path><![CDATA[C:\testdata]]></Path> 
		</ActionObject>
		<ActionObject>
			<Name>SourceData</Name>
			<Class>SimpleFileObject</Class>
			<Path><![CDATA[\\r100\share1\PageobjectConnected\testdata]]></Path> 
		</ActionObject>		
		<ActionObject> 
			<Name>MyRoamRegressionData</Name>
			<Class>SimpleFileObject</Class> 
			<Path><![CDATA[C:\testdata\MyRoamRegressionData]]></Path> 
		</ActionObject> 
		<ActionObject> 
			<Name>CDrive</Name>
			<Class>SimpleFileObject</Class> 
			<Path><![CDATA[C:\]]></Path> 
		</ActionObject> 			
	</ActionObjects> 
</Runner>