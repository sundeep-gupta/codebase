<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
	<name>googleSearch</name>
	<author>kksou</author>
	<creationDate>May 2008</creationDate>
	<copyright>(C) kksou.com. All Rights Reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@kksou.com</authorEmail>
	<authorUrl>www.kksou.com/php-gtk2/</authorUrl>
	<version>1.5.15</version>
	<description>This component allows you to add Google Adsense Search to your Joomla site with the search results displayed right inside your Joomla page!</description>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install.mysql.sql</file>
		</sql>
	</install>
	
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">uninstall.mysql.sql</file>
		</sql>
	</uninstall>
	
	<files>
		<filename>googlesearch.php</filename>
		<filename>googlesearch.lib.php</filename>
	</files>
	
	<administration>
		<menu>googleSearch</menu>
		
		<files folder="admin">
			<filename>install.mysql.sql</filename>
			<filename>uninstall.mysql.sql</filename>
			<filename>admin.googlesearch.php</filename>
			<filename>admin.googlesearch.html.php</filename>
			<filename>admin.googlesearch.lib.php</filename>
			<filename>controller.php</filename>
			<filename>README.txt</filename>
			<filename>tables/googlesearch.php</filename>
		</files>
		
	</administration>
	
</install>